<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.souka.digitaltvapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.DigitalTvActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AdvanceActivity" />
        <activity android:name=".activity.MpegTSActivity" />
        <activity android:name=".activity.Mpeg2Activity" />
        <activity android:name=".activity.H264Activity" />
        <activity android:name=".activity.ParameterActivity" />

        <supports-screens
            android:anyDensity="true"
            android:largeScreens="true"
            android:normalScreens="true"
            android:resizeable="true"
            android:smallScreens="true" />

        <activity android:name=".activity.TextDialogActivity"></activity>
    </application>

</manifest>