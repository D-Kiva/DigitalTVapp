<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mpeg_ts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.souka.digitaltvapp.activity.MpegTSActivity">
    <RelativeLayout
        android:id="@+id/ly_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/bg_top"
        android:layout_alignParentLeft="true">


        <TextView
            android:id="@+id/txt_topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/text_white"
            android:text="@string/tab_top_mpeg_ts"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="Button"/>
        <Button
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="确定"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ly_top_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rl_list_bg_mid">

            <RelativeLayout
                style="@style/myRelativeLayoutmid"
                android:id="@+id/tsProgramID"
                >

                <TextView
                    style="@style/mytextmore"
                    android:text="Program ID"/>

                <TextView
                    style="@style/mytextmore"
                    android:id="@+id/tsProgramIDInfo"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/hl_gray6"
                    android:text="7x24小时专人看护"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/devide_line"
                />
            <RelativeLayout
                style="@style/myRelativeLayoutmid"
                android:id="@+id/tsPmtPid"
                >

                <TextView
                    style="@style/mytextmore"
                    android:text="PMT PID"/>

                <TextView
                    style="@style/mytextmore"
                    android:id="@+id/tsPmtPidInfo"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/hl_gray6"
                    android:text="7x24小时专人看护"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/devide_line"
                />
            <RelativeLayout
                style="@style/myRelativeLayoutmid"
                android:id="@+id/tsVideoPid"
                >

                <TextView
                    style="@style/mytextmore"
                    android:text="Video PID"/>

                <TextView
                    style="@style/mytextmore"
                    android:id="@+id/tsVideoPidInfo"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/hl_gray6"
                    android:text="7x24小时专人看护"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/devide_line"
                />
            <RelativeLayout
                style="@style/myRelativeLayoutmid"
                android:id="@+id/tsAudioPid"
                >

                <TextView
                    style="@style/mytextmore"
                    android:text="Audio PID"/>

                <TextView
                    style="@style/mytextmore"
                    android:id="@+id/tsAudioPidInfo"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/hl_gray6"
                    android:text="7x24小时专人看护"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/devide_line"
                />
            <RelativeLayout
                style="@style/myRelativeLayoutmid"
                android:id="@+id/tsNetworkPid"
                >

                <TextView
                    style="@style/mytextmore"
                    android:text="Program ID"/>

                <TextView
                    style="@style/mytextmore"
                    android:id="@+id/tsNetworkPidInfo"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/hl_gray6"
                    android:text="7x24小时专人看护"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/devide_line"
                />
            <RelativeLayout
                style="@style/myRelativeLayoutmid"
                android:id="@+id/tsTexturePid"
                >

                <TextView
                    style="@style/mytextmore"
                    android:text="Program ID"/>

                <TextView
                    style="@style/mytextmore"
                    android:id="@+id/tsTexturePidInfo"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/hl_gray6"
                    android:text="7x24小时专人看护"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/devide_line"
                />
          </LinearLayout>
        </RelativeLayout>
    </ScrollView>>
</RelativeLayout>
